#include "klor.dtsi"

/ {
    chosen {
        zmk,kscan = &mock_kscan;
        wakeup-source;
    };

    mock_kscan: kscan_1 {
        compatible = "zmk,kscan-mock";
        columns = <0>;
        rows = <0>;
        events = <0>;
    };

    // LED strip on the Snake adapter
    led_strip_snake: ws2812@0 {
        compatible = "ws2812";
        spi = <&spi1 0>;
        pin = <15>;
        label = "LED Strip Snake";
        chain-length = <5>; // change this to your LED count
    };
};
